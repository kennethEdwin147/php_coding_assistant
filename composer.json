{
    "name": "votre-nom/assistant-php",
    "description": "Assistant PHP CLI avec IA et contexte intelligent",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.8",
        "league/climate": "^3.8",
        "nikic/php-parser": "^5.5",
        "symfony/filesystem": "^7.3",
        "symfony/finder": "^7.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "AssistantPhp\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AssistantPhp\\Tests\\": "tests/"
        }
    },
    "bin": ["assistant"],
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
